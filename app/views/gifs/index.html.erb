<h1>Listing gifs</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Upvotes</th>
      <th>Downvotes</th>
      <th>Views</th>
      <th>Ratio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @gifs.each do |gif| %>
      <tr>
        <td><%= gif.caption %></td>
        <td><%= gif.upvotes %></td>
        <td><%= gif.downvotes %></td>
        <td><%= gif.views %></td>
        <td><%= gif.ratio %></td>
        <td><%= link_to 'Show', gif %></td>
        <td><%= link_to 'Edit', edit_gif_path(gif) %></td>
        <td><%= link_to 'Destroy', gif, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

